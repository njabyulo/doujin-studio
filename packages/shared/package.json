{
  "name": "@doujin/shared",
  "version": "0.0.0",
  "private": true,
  "type": "module",
  "exports": {
    "./types": {
      "types": "./dist/types/index.d.ts",
      "default": "./dist/types/index.js"
    },
    "./consts": {
      "types": "./dist/consts/index.d.ts",
      "default": "./dist/consts/index.js"
    },
    "./utils": {
      "types": "./dist/utils/index.d.ts",
      "default": "./dist/utils/index.js"
    }
  },
  "scripts": {
    "build": "tsup",
    "dev": "tsup --watch",
    "lint": "pnpm lint:type && pnpm lint:code",
    "lint:type": "tsc --noEmit",
    "lint:code": "eslint . --max-warnings 0",
    "clean": "rm -rf dist .turbo",
    "clean:all": "pnpm clean && rm -rf node_modules"
  },
  "dependencies": {
    "zod": "^4.3.6"
  },
  "devDependencies": {
    "@doujin/config": "workspace:*",
    "eslint": "^10.0.0",
    "tsup": "^8.5.0",
    "typescript": "^5.9.3"
  }
}
