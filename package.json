{
  "name": "doujin",
  "version": "0.0.0",
  "private": true,
  "packageManager": "pnpm@10.28.2",
  "scripts": {
    "dev": "turbo run dev --filter=api --filter=web --continue=always",
    "dev:all": "turbo run dev --continue=always",
    "test": "turbo run test",
    "build": "turbo run build",
    "deploy": "turbo run deploy --filter=api --filter=web --continue=always",
    "check:web-api-ownership": "node scripts/check-web-api-ownership.mjs",
    "lint": "pnpm check:web-api-ownership && turbo run lint",
    "lint:code": "turbo run lint:code",
    "lint:type": "turbo run lint:type",
    "format": "prettier --write \"**/*.{ts,tsx,js,jsx,json,md}\"",
    "format:check": "prettier --check \"**/*.{ts,tsx,js,jsx,json,md}\"",
    "db:generate": "turbo run db:generate --filter=@doujin/database",
    "db:migrate": "turbo run db:migrate --filter=@doujin/database",
    "db:migrate:remote": "turbo run db:migrate:remote --filter=@doujin/database",
    "db:studio": "turbo run db:studio --filter=@doujin/database",
    "clean": "turbo run clean --continue=always",
    "clean:all": "turbo run clean:all --continue=always && rm -rf .turbo"
  },
  "devDependencies": {
    "prettier": "^3.8.1",
    "turbo": "^2.8.3",
    "typescript": "^5.9.3"
  },
  "dependencies": {}
}
