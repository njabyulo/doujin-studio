{
  "name": "api",
  "version": "0.1.0",
  "private": true,
  "type": "module",
  "scripts": {
    "dev": "wrangler dev --persist-to ../../.wrangler/state",
    "dev:remote": "wrangler dev --remote",
    "deploy": "wrangler deploy --env production",
    "lint": "pnpm lint:type && pnpm lint:code",
    "lint:type": "tsc --noEmit",
    "lint:code": "eslint . --max-warnings 0",
    "test": "vitest run",
    "clean": "rm -rf dist .turbo .wrangler",
    "clean:all": "pnpm clean && rm -rf node_modules"
  },
  "dependencies": {
    "@doujin/core": "workspace:*",
    "@doujin/shared": "workspace:*",
    "@doujin/database": "workspace:*",
    "aws4fetch": "^1.0.20",
    "better-auth": "^1.4.18",
    "drizzle-orm": "^0.45.1",
    "hono": "^4.11.9",
    "zod": "^4.3.6"
  },
  "devDependencies": {
    "@cloudflare/vitest-pool-workers": "^0.12.10",
    "@cloudflare/workers-types": "^4.20260207.0",
    "@doujin/config": "workspace:*",
    "eslint": "^10.0.0",
    "typescript": "^5.9.3",
    "vitest": "^3.2.4",
    "wrangler": "^4.63.0"
  }
}
